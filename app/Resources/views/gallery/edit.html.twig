{% extends "@FOSUser/layout.html.twig" %}

{% block top %}
    <style>
        img {
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 5px;
            width: 150px;
        }

        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

        li {
            display: inline;
        }
    </style>
<div class="container text-center">

    <ul>
        {% for photo in gallery.photos %}
            <li><img src="{{ asset('img/uploads/' ~ photo.imageName) }}" alt=""></li>
        {% endfor %}
    </ul>

    <div class="row">
    <h1>Gallery edit</h1>
        {{ form_start(edit_form) }}
        <div class="form-group">
            {{ form_label(edit_form.name) }}
            {{ form_widget(edit_form.name, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(edit_form.description) }}
            {{ form_widget(edit_form.description, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_widget(edit_form) }}
            <input type="submit" value="Edit Gallery" />
        </div>

        {{ form_end(edit_form) }}
        <div class="form-group">
        {{ form_start(delete_form) }}
        <input type="submit" value="Delete Gallery">
        </div>
        {{ form_end(delete_form) }}

        <h1>Add new photo to this gallery</h1>

        {{ form_start(photo_form) }}
        <div class="form-group">
        {{ form_widget(photo_form) }}
        <input type="submit" value="save" />
        </div>
        {{ form_end(photo_form) }}


    </div>
</div>
{% endblock %}
